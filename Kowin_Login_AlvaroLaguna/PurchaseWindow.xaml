<Window x:Class="Kowin_Login_AlvaroLaguna.PurchaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalles del Juego - KoWin" Height="550" Width="900"
        WindowStartupLocation="CenterOwner" Background="Black" ResizeMode="NoResize" WindowStyle="None">

    <Border BorderBrush="#FF0000" BorderThickness="1">
        <Grid>
            <!-- Fondo Global con la misma imagen -->
            <Grid.Background>
                <ImageBrush ImageSource="pack://application:,,,/Imagenes/FondoKowin.jpg" Stretch="UniformToFill" Opacity="0.5"/>
            </Grid.Background>

            <Rectangle Fill="#D9000000"/>
            <!-- Capa oscura para legibilidad -->

            <Grid Margin="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <!-- Carátula -->
                    <ColumnDefinition Width="*"/>
                    <!-- Info -->
                </Grid.ColumnDefinitions>

                <!-- COLUMNA 1: CARÁTULA -->
                <Border Grid.Column="0" BorderBrush="#333" BorderThickness="1" CornerRadius="5" Background="#111" Margin="0,0,30,0" Height="450" VerticalAlignment="Top">
                    <Border.Effect>
                        <DropShadowEffect Color="Red" BlurRadius="25" ShadowDepth="0" Opacity="0.3"/>
                    </Border.Effect>
                    <Image x:Name="imgJuego" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <!-- COLUMNA 2: DETALLES -->
                <StackPanel Grid.Column="1">

                    <!-- Header -->
                    <TextBlock Text="DETALLES DEL PRODUCTO" Foreground="Gray" FontSize="12" FontWeight="Bold" Margin="0,0,0,10" />
                    <TextBlock x:Name="txtTitulo" Text="TITULO JUEGO" Foreground="White" FontSize="32" FontWeight="Bold" TextWrapping="Wrap" Margin="0,0,0,5">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock x:Name="txtAnio" Text="2023" Foreground="LightGray" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock Text="|" Foreground="Gray" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock x:Name="txtFabricante" Text="Fabricante" Foreground="#FF5555" FontSize="16"/>
                    </StackPanel>

                    <!-- Descripción -->
                    <Border Background="#33111111" CornerRadius="5" Padding="15" Margin="0,0,0,20" BorderBrush="#333" BorderThickness="1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="150">
                            <TextBlock x:Name="txtDescripcion" Text="Descripción del juego..." Foreground="#DDD" FontSize="14" TextWrapping="Wrap" LineHeight="20"/>
                        </ScrollViewer>
                    </Border>

                    <!-- Info Adicional (PEGI) -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,30">
                        <Border BorderBrush="White" BorderThickness="2" CornerRadius="3" Width="40" Height="40" Margin="0,0,10,0">
                            <TextBlock x:Name="txtEdad" Text="18+" Foreground="White" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Edad recomendada" Foreground="Gray" VerticalAlignment="Center"/>
                    </StackPanel>

                    <Separator Background="#333" Margin="0,0,0,20"/>

                    <!-- Precio y Botones -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Precio Final:" Foreground="Gray" FontSize="12"/>
                            <TextBlock x:Name="txtPrecio" Text="59.99 €" Foreground="#00FF00" FontSize="36" FontWeight="Bold"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <Button Content="COMPRAR AHORA" Background="#D10000" Foreground="White" Height="45" FontSize="16" FontWeight="Bold" Cursor="Hand" Click="BtnConfirmar_Click" Margin="0,0,0,10">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <Button Content="CANCELAR" Background="Transparent" Foreground="Gray" BorderThickness="0" Cursor="Hand" Click="BtnCancelar_Click"/>
                        </StackPanel>
                    </Grid>

                </StackPanel>
            </Grid>

            <!-- Botón Cerrar -->
            <Button Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="15" Background="Transparent" Foreground="Gray" BorderThickness="0" FontSize="18" FontWeight="Bold" Click="BtnCancelar_Click" Cursor="Hand"/>
        </Grid>
    </Border>
</Window>
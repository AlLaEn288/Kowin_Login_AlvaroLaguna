<Window x:Class="Kowin_Login_AlvaroLaguna.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel de Administración - KoWin" Height="650" Width="1100"
        WindowStartupLocation="CenterScreen" Background="Black" Foreground="White">

    <Window.Resources>
        <!-- Estilos DataGrid -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#800000"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="#333"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
        </Style>
        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FF0000"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Fondo Global -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Imagenes/FondoKowin.jpg" Stretch="UniformToFill" Opacity="0.4"/>
        </Grid.Background>

        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!-- Lista -->
                <ColumnDefinition Width="350"/>
                <!-- Formulario -->
            </Grid.ColumnDefinitions>

            <!-- COLUMNA IZQUIERDA: LISTA Y BUSCADOR -->
            <Grid Grid.Column="0" Margin="0,0,20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Título y Buscador -->
                    <RowDefinition Height="*"/>
                    <!-- Tabla -->
                </Grid.RowDefinitions>

                <StackPanel>
                    <TextBlock Text="PANEL DE ADMINISTRACIÓN" FontSize="24" FontWeight="Bold" Foreground="#FF0000" Margin="0,0,0,20">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Red" BlurRadius="15"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <Border Background="#CC1A1A1A" Padding="10" CornerRadius="5" Margin="0,0,0,10" BorderBrush="#333" BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔍 Buscar Usuario:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
                            <TextBox x:Name="txtBuscar" Width="250" Height="30" VerticalContentAlignment="Center" Background="#111" Foreground="White" BorderBrush="Gray" Padding="5" KeyUp="TxtBuscar_KeyUp"/>
                            <Button Content="REFRESCAR" Margin="10,0,0,0" Width="100" Height="30" Click="BtnRefrescar_Click" Background="#333" Foreground="White" BorderThickness="0" FontWeight="Bold" Cursor="Hand"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <DataGrid x:Name="GridUsuarios" Grid.Row="1" AutoGenerateColumns="False" 
                          SelectionMode="Single" SelectionChanged="GridUsuarios_SelectionChanged"
                          Background="#CC111111" BorderBrush="#FF0000" BorderThickness="1"
                          GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#333" HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="USUARIO" Binding="{Binding NombreUsuario}" Width="*"/>
                        <DataGridTextColumn Header="EMAIL" Binding="{Binding Email}" Width="200"/>
                        <DataGridTextColumn Header="ROL" Binding="{Binding Rol}" Width="100"/>
                        <DataGridTextColumn Header="ESTADO" Binding="{Binding Estado}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <!-- COLUMNA DERECHA: FORMULARIO CRUD -->
            <Border Grid.Column="1" Background="#CC0f0f0f" BorderBrush="#FF0000" BorderThickness="1" Padding="25" CornerRadius="10">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="20" Opacity="0.5"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="GESTIÓN DE USUARIO" FontSize="20" FontWeight="Bold" Foreground="#FF0000" HorizontalAlignment="Center" Margin="0,0,0,25"/>

                    <TextBlock Text="Nombre Usuario" Foreground="Gray" FontWeight="Bold" Margin="0,5"/>
                    <TextBox x:Name="txtNombre" Height="30" Background="#111" Foreground="White" BorderBrush="#444" Padding="5" IsEnabled="False"/>

                    <TextBlock Text="Contraseña" Foreground="Gray" FontWeight="Bold" Margin="0,15,0,5"/>
                    <TextBox x:Name="txtPass" Height="30" Background="#111" Foreground="White" BorderBrush="#444" Padding="5"/>

                    <TextBlock Text="Email" Foreground="Gray" FontWeight="Bold" Margin="0,15,0,5"/>
                    <TextBox x:Name="txtEmail" Height="30" Background="#111" Foreground="White" BorderBrush="#444" Padding="5"/>

                    <Grid Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <TextBlock Text="Rol" Foreground="Gray" FontWeight="Bold" Margin="0,0,0,5"/>
                            <ComboBox x:Name="cmbRol" Height="30" Background="#111" Foreground="Black">
                                <ComboBoxItem Content="Nominal"/>
                                <ComboBoxItem Content="Admin"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                            <TextBlock Text="Estado" Foreground="Gray" FontWeight="Bold" Margin="0,0,0,5"/>
                            <ComboBox x:Name="cmbEstado" Height="30" Background="#111" Foreground="Black">
                                <ComboBoxItem Content="Activo" Foreground="Green"/>
                                <ComboBoxItem Content="Baneado" Foreground="Red" FontWeight="Bold"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <Separator Background="#333" Margin="0,30"/>

                    <!-- BOTÓN DE ACCIÓN (CREAR / GUARDAR) -->
                    <!-- Le he puesto x:Name="BtnAccion" para cambiarle el texto según si creas o editas -->
                    <Button x:Name="BtnAccion" Content="CREAR USUARIO" Height="40" Background="#00AA00" Foreground="White" FontWeight="Bold" BorderThickness="0" Margin="0,0,0,10" Click="BtnGuardar_Click" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button Content="ELIMINAR USUARIO" Height="40" Background="#AA0000" Foreground="White" FontWeight="Bold" BorderThickness="0" Margin="0,0,0,30" Click="BtnEliminar_Click" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <TextBlock Text="Acciones Rápidas:" Foreground="Gray" FontWeight="Bold" Margin="0,0,0,5"/>
                    <Button Content="Limpiar Formulario (Nuevo Usuario)" Background="Gray" Foreground="White" Height="30" Margin="0,0,0,5" Click="BtnLimpiar_Click"/>
                    <Button Content="Cerrar Panel Admin" Background="#333" Foreground="White" Height="30" Click="BtnSalir_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
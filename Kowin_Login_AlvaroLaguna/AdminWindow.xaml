<Window x:Class="Kowin_Login_AlvaroLaguna.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel de Administración - KoWin" Height="750" Width="1200"
        WindowStartupLocation="CenterScreen" Background="Black" Foreground="White">

    <Window.Resources>
        <!-- COLORES PRINCIPALES -->
        <SolidColorBrush x:Key="KoWinRed" Color="#D10000"/>
        <SolidColorBrush x:Key="KoWinDark" Color="#151515"/>
        <SolidColorBrush x:Key="KoWinPanel" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="KoWinText" Color="#DDDDDD"/>

        <!-- ESTILO BOTONES REDONDEADOS -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="10" Padding="15,8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ESTILO INPUTS (TEXTBOX) -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#111"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ESTILO COMBOBOX -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#111"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444"/>
        </Style>

        <!-- ESTILO PESTAÑAS (TABITEM) -->
        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="border" Background="Transparent" Padding="20,10" Margin="0,0,5,0" CornerRadius="5,5,0,0">
                            <ContentPresenter ContentSource="Header" TextElement.Foreground="Gray" TextElement.FontWeight="Bold" TextElement.FontSize="14"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource KoWinRed}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ESTILO DATAGRID -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource KoWinDark}"/>
            <Setter Property="RowBackground" Value="{StaticResource KoWinDark}"/>
            <Setter Property="AlternatingRowBackground" Value="#222"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#333"/>
            <Setter Property="VerticalGridLinesBrush" Value="#333"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource KoWinRed}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#AA0000"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#500000"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid>
        <!-- FONDO GLOBAL CON IMAGEN -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Imagenes/FondoKowin.jpg" Stretch="UniformToFill" Opacity="0.3"/>
        </Grid.Background>

        <Grid Margin="20">
            <!-- TÍTULO PRINCIPAL FLOTANTE -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="PANEL DE ADMINISTRACIÓN" FontSize="32" FontWeight="Bold" Foreground="{StaticResource KoWinRed}" HorizontalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Red" BlurRadius="20" ShadowDepth="0"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock Text="Gestión integral de la plataforma KoWin" Foreground="Gray" HorizontalAlignment="Center" FontSize="14"/>
            </StackPanel>

            <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0">

                <!-- === PESTAÑA 1: GESTIÓN DE USUARIOS === -->
                <TabItem Header="USUARIOS">
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <!-- LISTA -->
                            <ColumnDefinition Width="380"/>
                            <!-- FORMULARIO -->
                        </Grid.ColumnDefinitions>

                        <!-- LISTA IZQUIERDA -->
                        <Grid Grid.Column="0" Margin="0,0,20,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Background="{StaticResource KoWinPanel}" CornerRadius="10" Padding="15" Margin="0,0,0,15" BorderBrush="#333" BorderThickness="1">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🔍" VerticalAlignment="Center" FontSize="16" Margin="0,0,10,0"/>
                                    <TextBox x:Name="txtBuscar" Width="300" Height="35" FontSize="14" KeyUp="TxtBuscar_KeyUp" ToolTip="Buscar por nombre..."/>
                                    <Button Content="REFRESCAR" Margin="10,0,0,0" Width="120" Background="#444" Click="BtnRefrescar_Click"/>
                                </StackPanel>
                            </Border>

                            <DataGrid x:Name="GridUsuarios" Grid.Row="1" AutoGenerateColumns="False" 
                                      SelectionMode="Single" SelectionChanged="GridUsuarios_SelectionChanged">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                                    <DataGridTextColumn Header="USUARIO" Binding="{Binding NombreUsuario}" Width="*"/>
                                    <DataGridTextColumn Header="EMAIL" Binding="{Binding Email}" Width="200"/>
                                    <DataGridTextColumn Header="ROL" Binding="{Binding Rol}" Width="100"/>

                                    <!-- Columna Estado con estilo condicional (rojo/verde) se haría con triggers, aquí texto simple -->
                                    <DataGridTextColumn Header="ESTADO" Binding="{Binding Estado}" Width="100"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>

                        <!-- FORMULARIO DERECHA -->
                        <Border Grid.Column="1" Background="{StaticResource KoWinPanel}" CornerRadius="15" BorderBrush="{StaticResource KoWinRed}" BorderThickness="1" Padding="25">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="20" Opacity="0.5"/>
                            </Border.Effect>

                            <StackPanel>
                                <TextBlock Text="EDITAR PERFIL" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,25"/>

                                <TextBlock Text="Nombre de Usuario" Foreground="#AAA" FontWeight="SemiBold" Margin="0,5"/>
                                <TextBox x:Name="txtNombre" Height="35" IsEnabled="False" Opacity="0.7"/>

                                <TextBlock Text="Contraseña" Foreground="#AAA" FontWeight="SemiBold" Margin="0,15,0,5"/>
                                <TextBox x:Name="txtPass" Height="35"/>

                                <TextBlock Text="Email de Contacto" Foreground="#AAA" FontWeight="SemiBold" Margin="0,15,0,5"/>
                                <TextBox x:Name="txtEmail" Height="35"/>

                                <Grid Margin="0,20,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                        <TextBlock Text="Rol" Foreground="#AAA" FontWeight="SemiBold" Margin="0,5"/>
                                        <ComboBox x:Name="cmbRol" Height="35" Padding="5" VerticalContentAlignment="Center">
                                            <ComboBoxItem Content="Nominal"/>
                                            <ComboBoxItem Content="Admin" FontWeight="Bold" Foreground="#FF5555"/>
                                        </ComboBox>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        <TextBlock Text="Estado" Foreground="#AAA" FontWeight="SemiBold" Margin="0,5"/>
                                        <ComboBox x:Name="cmbEstado" Height="35" Padding="5" VerticalContentAlignment="Center">
                                            <ComboBoxItem Content="Activo" Foreground="LightGreen"/>
                                            <ComboBoxItem Content="Baneado" Foreground="Red"/>
                                        </ComboBox>
                                    </StackPanel>
                                </Grid>

                                <Separator Background="#333" Margin="0,30"/>

                                <Button x:Name="BtnAccion" Content="CREAR USUARIO" Background="{StaticResource KoWinRed}" Height="45" FontSize="14" Margin="0,0,0,10" Click="BtnGuardar_Click"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Content="ELIMINAR" Background="#800000" Margin="0,0,5,0" Click="BtnEliminar_Click"/>
                                    <Button Content="LIMPIAR" Background="#444" Margin="5,0,0,0" Click="BtnLimpiar_Click"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>
                </TabItem>

                <!-- === PESTAÑA 2: GESTIÓN DE VIDEOJUEGOS === -->
                <TabItem Header="CATÁLOGO">
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="400"/>
                        </Grid.ColumnDefinitions>

                        <!-- LISTA JUEGOS -->
                        <Grid Grid.Column="0" Margin="0,0,20,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Background="{StaticResource KoWinPanel}" CornerRadius="10" Padding="15" Margin="0,0,0,15" BorderBrush="#333" BorderThickness="1">
                                <TextBlock Text="🎮  LISTADO DEL CATÁLOGO" FontWeight="Bold" FontSize="16" Foreground="White"/>
                            </Border>

                            <DataGrid x:Name="GridJuegos" Grid.Row="1" AutoGenerateColumns="False" SelectionMode="Single" SelectionChanged="GridJuegos_SelectionChanged">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                                    <DataGridTextColumn Header="TÍTULO" Binding="{Binding Titulo}" Width="*"/>
                                    <DataGridTextColumn Header="AÑO" Binding="{Binding Anio}" Width="60"/>
                                    <DataGridTextColumn Header="PRECIO" Binding="{Binding Precio}" Width="80"/>
                                    <DataGridTextColumn Header="CATEGORÍA" Binding="{Binding Categoria}" Width="120"/>
                                    <DataGridCheckBoxColumn Header="VISIBLE" Binding="{Binding Visible}" Width="60"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>

                        <!-- FORMULARIO JUEGOS -->
                        <Border Grid.Column="1" Background="{StaticResource KoWinPanel}" CornerRadius="15" BorderBrush="{StaticResource KoWinRed}" BorderThickness="1" Padding="25">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="20" Opacity="0.5"/>
                            </Border.Effect>

                            <ScrollViewer VerticalScrollBarVisibility="Hidden">
                                <StackPanel>
                                    <TextBlock Text="FICHA DE JUEGO" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                                    <TextBlock Text="Título del Juego" Foreground="#AAA" Margin="0,5"/>
                                    <TextBox x:Name="txtJuegoTitulo" Height="35"/>

                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                            <TextBlock Text="Año" Foreground="#AAA" Margin="0,5"/>
                                            <TextBox x:Name="txtJuegoAnio" Height="35"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                            <TextBlock Text="Precio (€)" Foreground="#AAA" Margin="0,5"/>
                                            <TextBox x:Name="txtJuegoPrecio" Height="35"/>
                                        </StackPanel>
                                    </Grid>

                                    <TextBlock Text="Categoría" Foreground="#AAA" Margin="0,10,0,5"/>
                                    <ComboBox x:Name="cmbJuegoCategoria" Height="35" Padding="5" VerticalContentAlignment="Center">
                                        <ComboBoxItem Content="Destacados"/>
                                        <ComboBoxItem Content="Lanzamientos"/>
                                        <ComboBoxItem Content="Terror"/>
                                        <ComboBoxItem Content="Supervivencia"/>
                                        <ComboBoxItem Content="RPG"/>
                                    </ComboBox>

                                    <TextBlock Text="Fabricante" Foreground="#AAA" Margin="0,10,0,5"/>
                                    <TextBox x:Name="txtJuegoFab" Height="35"/>

                                    <TextBlock Text="Imagen (URL o pack://)" Foreground="#AAA" Margin="0,10,0,5"/>
                                    <TextBox x:Name="txtJuegoImg" Height="35"/>

                                    <CheckBox x:Name="chkJuegoVisible" Content="Visible para usuarios" Foreground="White" Margin="0,15,0,15" IsChecked="True">
                                        <CheckBox.LayoutTransform>
                                            <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                        </CheckBox.LayoutTransform>
                                    </CheckBox>

                                    <!-- PREVIEW -->
                                    <TextBlock Text="Vista Previa:" Foreground="Gray" FontSize="10" Margin="0,0,0,5"/>
                                    <Border Height="120" Background="Black" CornerRadius="5" BorderBrush="#444" BorderThickness="1" Margin="0,0,0,20">
                                        <Image x:Name="imgPreview" Stretch="Uniform"/>
                                    </Border>

                                    <Button x:Name="BtnJuegoAccion" Content="AÑADIR AL CATÁLOGO" Background="{StaticResource KoWinRed}" Height="45" Click="BtnGuardarJuego_Click"/>

                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Button Content="ELIMINAR" Background="#800000" Margin="0,0,5,0" Click="BtnEliminarJuego_Click"/>
                                        <Button Content="LIMPIAR" Background="#444" Margin="5,0,0,0" Click="BtnLimpiarJuego_Click"/>
                                    </Grid>

                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </TabItem>
            </TabControl>

            <!-- BOTÓN SALIR -->
            <Button Content="⏻ SALIR" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" Width="100" Background="#333" Foreground="Red" Click="BtnSalir_Click"/>
        </Grid>
    </Grid>
</Window>
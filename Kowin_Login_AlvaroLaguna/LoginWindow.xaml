<Window x:Class="Kowin_Login_AlvaroLaguna.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KoWin - Iniciar Sesión" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="Black" ResizeMode="NoResize" WindowStyle="None">

    <Border BorderBrush="#FF0000" BorderThickness="1">
        <Grid>
            <!-- Botón Cerrar (X) -->
            <Button Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" 
                    Margin="10" Background="Transparent" Foreground="Red" 
                    BorderThickness="0" FontWeight="Bold" Click="BtnSalir_Click" Cursor="Hand"/>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
                <!-- Logo -->
                <TextBlock Text="KoWin" FontSize="40" FontWeight="Bold" Foreground="#FF0000" 
                           HorizontalAlignment="Center" Margin="0,0,0,30">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Red" BlurRadius="20" ShadowDepth="0"/>
                    </TextBlock.Effect>
                </TextBlock>

                <!-- Usuario -->
                <TextBlock Text="USUARIO" Foreground="Gray" FontWeight="Bold" Margin="0,5"/>
                <TextBox x:Name="txtUser" Background="#111111" Foreground="White" BorderBrush="#333333" Padding="5"/>

                <!-- Contraseña -->
                <TextBlock Text="CONTRASEÑA" Foreground="Gray" FontWeight="Bold" Margin="0,15,0,5"/>
                <PasswordBox x:Name="txtPass" Background="#111111" Foreground="White" BorderBrush="#333333" Padding="5"/>

                <!-- Mensaje Error -->
                <TextBlock x:Name="lblError" Foreground="Red" Margin="0,10" Visibility="Collapsed" TextAlignment="Center"/>

                <!-- Botón Entrar -->
                <Button Content="INICIAR SESIÓN" Margin="0,20,0,10" Height="35" 
                        Background="#FF0000" Foreground="White" FontWeight="Bold" BorderThickness="0"
                        Click="BtnLogin_Click" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <!-- Crear Cuenta -->
                <TextBlock Text="¿No tienes cuenta?" Foreground="Gray" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                <TextBlock Text="Regístrate aquí" Foreground="#FF0000" FontWeight="Bold" Cursor="Hand" 
                           HorizontalAlignment="Center" MouseLeftButtonDown="BtnIrARegistro_Click" TextDecorations="Underline"/>

            </StackPanel>
        </Grid>
    </Border>
</Window>
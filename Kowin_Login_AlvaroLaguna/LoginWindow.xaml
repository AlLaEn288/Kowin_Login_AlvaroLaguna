<Window x:Class="Kowin_Login_AlvaroLaguna.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KoWin - Iniciar Sesión" Height="550" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="Black" ResizeMode="NoResize" WindowStyle="None">

    <Border BorderBrush="#FF0000" BorderThickness="1">
        <Grid>
            <!-- 1. FONDO DE PANTALLA COMPLETO -->
            <Grid.Background>
                <!-- Opacity 0.6 para que no brille tanto y se lea el texto -->
                <ImageBrush ImageSource="pack://application:,,,/Imagenes/FondoKowin.jpg" Stretch="UniformToFill" Opacity="0.6"/>
            </Grid.Background>

            <!-- Botón Cerrar (Esquina) -->
            <Button Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" 
                    Margin="15" Background="Transparent" Foreground="Red" FontSize="16"
                    BorderThickness="0" FontWeight="Bold" Click="BtnSalir_Click" Cursor="Hand"/>

            <!-- 2. CAJA CENTRAL FLOTANTE (SEMI-TRANSPARENTE) -->
            <Border Background="#CC050505" CornerRadius="15" BorderBrush="#333" BorderThickness="1"
                    HorizontalAlignment="Center" VerticalAlignment="Center" Padding="40" Width="400">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
                </Border.Effect>

                <StackPanel>
                    <!-- Logo centrado -->
                    <TextBlock Text="BIENVENIDO A" Foreground="Gray" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBlock Text="KOWIN" FontSize="40" FontWeight="Bold" Foreground="#FF0000" 
                               HorizontalAlignment="Center" Margin="0,0,0,30">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Red" BlurRadius="15" ShadowDepth="0"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <!-- Usuario -->
                    <TextBlock Text="USUARIO" Foreground="Gray" FontWeight="Bold" Margin="0,5"/>
                    <TextBox x:Name="txtUser" Height="35" VerticalContentAlignment="Center"
                             Background="#222" Foreground="White" BorderBrush="#444" Padding="5"/>

                    <!-- Contraseña -->
                    <TextBlock Text="CONTRASEÑA" Foreground="Gray" FontWeight="Bold" Margin="0,15,0,5"/>
                    <PasswordBox x:Name="txtPass" Height="35" VerticalContentAlignment="Center"
                                 Background="#222" Foreground="White" BorderBrush="#444" Padding="5"/>

                    <!-- Mensaje Error -->
                    <TextBlock x:Name="lblError" Foreground="Red" Margin="0,15,0,5" Visibility="Collapsed" TextAlignment="Center" TextWrapping="Wrap"/>

                    <!-- Botón Entrar -->
                    <Button Content="INICIAR SESIÓN" Margin="0,20,0,10" Height="40" 
                            Background="#FF0000" Foreground="White" FontWeight="Bold" BorderThickness="0"
                            Click="BtnLogin_Click" Cursor="Hand" FontSize="14">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <!-- Crear Cuenta -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <TextBlock Text="¿Nuevo aquí? " Foreground="Gray"/>
                        <TextBlock Text="Crea una cuenta" Foreground="White" FontWeight="Bold" Cursor="Hand" 
                                   MouseLeftButtonDown="BtnIrARegistro_Click" TextDecorations="Underline"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
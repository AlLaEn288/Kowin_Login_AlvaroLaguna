<Window x:Class="Kowin_Login_AlvaroLaguna.FlappyBirdWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KoWin - Flappy Demo" Height="500" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Focusable="True" KeyDown="Canvas_KeyDown" KeyUp="Canvas_KeyUp">

    <Grid>
        <!-- FONDO DEL CIELO -->
        <Canvas x:Name="MyCanvas" Background="#87CEEB" Focusable="True">

            <!-- EL PÁJARO (Cuadrado Rojo) -->
            <Rectangle x:Name="flappyBird" Width="20" Height="20" Fill="Red" Stroke="Black" Canvas.Left="50" Canvas.Top="200"/>

            <!-- TUBERÍAS (Se reutilizan moviéndolas) -->
            <Rectangle x:Name="pipeTop" Width="50" Height="150" Fill="Green" Stroke="Black" Canvas.Left="300" Canvas.Top="0"/>
            <Rectangle x:Name="pipeBottom" Width="50" Height="150" Fill="Green" Stroke="Black" Canvas.Left="300" Canvas.Top="300"/>

            <!-- NUBES DECORATIVAS -->
            <TextBlock Text="☁" FontSize="40" Foreground="White" Canvas.Left="50" Canvas.Top="50"/>
            <TextBlock Text="☁" FontSize="40" Foreground="White" Canvas.Left="200" Canvas.Top="100"/>
            <TextBlock Text="☁" FontSize="40" Foreground="White" Canvas.Left="300" Canvas.Top="30"/>

            <!-- PUNTUACIÓN -->
            <Label x:Name="txtScore" Content="Score: 0" FontSize="20" FontWeight="Bold" Foreground="White" Canvas.Left="10" Canvas.Top="10"/>
        </Canvas>

        <!-- PANTALLA GAME OVER (Oculta al principio) -->
        <Border x:Name="GameOverBorder" Background="#AA000000" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="GAME OVER" FontSize="40" FontWeight="Bold" Foreground="Red" HorizontalAlignment="Center"/>
                <TextBlock x:Name="txtFinalScore" Text="Puntuación: 0" FontSize="20" Foreground="White" HorizontalAlignment="Center" Margin="0,10"/>

                <Button Content="VOLVER A JUGAR" Background="Green" Foreground="White" FontWeight="Bold" Padding="10" Margin="0,20,0,10" Click="BtnReiniciar_Click"/>
                <Button Content="SALIR" Background="Red" Foreground="White" FontWeight="Bold" Padding="10" Click="BtnSalir_Click"/>
            </StackPanel>
        </Border>

        <!-- INSTRUCCIONES INICIO -->
        <TextBlock x:Name="txtStart" Text="Presiona ESPACIO para saltar" FontSize="16" FontWeight="Bold" Foreground="Black" 
                   HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20"/>
    </Grid>
</Window>

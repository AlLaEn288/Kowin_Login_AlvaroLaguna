<Window x:Class="Kowin_Login_AlvaroLaguna.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KoWin - Ajustes" Height="650" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#111111" ResizeMode="NoResize" WindowStyle="None">

    <Window.Resources>
        <!-- Estilo para los Títulos de Sección -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF0000"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,20,0,5"/>
        </Style>

        <!-- Estilo para las Cajas de Sección -->
        <Style x:Key="SectionBorder" TargetType="Border">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Estilo para Checkboxes (Texto blanco) -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#FF0000" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Cabecera -->
                <RowDefinition Height="*"/>
                <!-- Contenido Scroll -->
                <RowDefinition Height="Auto"/>
                <!-- Botones Pie -->
            </Grid.RowDefinitions>

            <!-- 1. CABECERA -->
            <Grid Grid.Row="0" Background="#0f0f0f" Height="60">
                <TextBlock Text="AJUSTES DE USUARIO" FontSize="20" FontWeight="Bold" Foreground="White" 
                           VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0"/>
                <TextBlock x:Name="lblUsuarioCabecera" Text="USUARIO" Foreground="#666666" 
                           VerticalAlignment="Center" HorizontalAlignment="Right" Margin="20,0" FontWeight="Bold"/>
            </Grid>

            <!-- 2. CONTENIDO (SCROLL) -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,10">
                <StackPanel Margin="20,0,20,20">

                    <!-- SECCIÓN: GENERAL -->
                    <TextBlock Text="GENERAL" Style="{StaticResource SectionHeader}"/>
                    <Border Style="{StaticResource SectionBorder}">
                        <StackPanel>
                            <TextBlock Text="Idioma del Cliente" Foreground="Gray" FontSize="12" Margin="0,0,0,5"/>
                            <ComboBox x:Name="cmbIdioma" Height="30" Margin="0,0,0,15" Padding="5">
                                <ComboBoxItem Content="Español" IsSelected="True"/>
                                <ComboBoxItem Content="English"/>
                                <ComboBoxItem Content="Français"/>
                                <ComboBoxItem Content="Deutsch"/>
                            </ComboBox>

                            <CheckBox x:Name="chkInicioWindows" Content="Iniciar KoWin al arrancar Windows"/>
                            <CheckBox x:Name="chkMinimizarBandeja" Content="Minimizar a la bandeja del sistema al cerrar"/>
                        </StackPanel>
                    </Border>

                    <!-- SECCIÓN: INTERFAZ -->
                    <TextBlock Text="INTERFAZ Y NOTIFICACIONES" Style="{StaticResource SectionHeader}"/>
                    <Border Style="{StaticResource SectionBorder}">
                        <StackPanel>
                            <CheckBox x:Name="chkNotificaciones" Content="Activar notificaciones de escritorio"/>
                            <CheckBox x:Name="chkMostrarFPS" Content="Mostrar contador de FPS en el juego"/>
                        </StackPanel>
                    </Border>

                    <!-- SECCIÓN: PRIVACIDAD -->
                    <TextBlock Text="PRIVACIDAD" Style="{StaticResource SectionHeader}"/>
                    <Border Style="{StaticResource SectionBorder}">
                        <StackPanel>
                            <CheckBox x:Name="chkInvisible" Content="Modo Invisible (Aparecer desconectado)"/>
                            <TextBlock Text="Si activas esto, tus amigos no verán a qué estás jugando." 
                                       Foreground="Gray" FontSize="11" TextWrapping="Wrap" Margin="25,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- SECCIÓN: AUDIO Y DESCARGAS -->
                    <TextBlock Text="SISTEMA" Style="{StaticResource SectionHeader}"/>
                    <Border Style="{StaticResource SectionBorder}">
                        <StackPanel>
                            <!-- Volumen -->
                            <TextBlock Text="Volumen Master de la Interfaz" Foreground="White" Margin="0,0,0,5"/>
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="sldVolumen" Maximum="100" Minimum="0" TickFrequency="10" IsSnapToTickEnabled="True"/>
                                <TextBlock Text="{Binding ElementName=sldVolumen, Path=Value}" Foreground="#FF0000" FontWeight="Bold" 
                                           Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            </Grid>

                            <!-- Descargas -->
                            <TextBlock Text="Límite de ancho de banda (MB/s)" Foreground="White" Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="sldDescarga" Maximum="100" Minimum="0" TickFrequency="5" IsSnapToTickEnabled="True"/>
                                <TextBlock Text="{Binding ElementName=sldDescarga, Path=Value}" Foreground="Gray" FontWeight="Bold" 
                                           Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            </Grid>
                            <TextBlock Text="0 = Ilimitado" Foreground="Gray" FontSize="10" HorizontalAlignment="Left" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- 3. BOTONES DE ACCIÓN -->
            <Border Grid.Row="2" Background="#0f0f0f" Padding="20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Descartar" Width="100" Height="35" Margin="0,0,10,0"
                            Background="Transparent" Foreground="Gray" BorderBrush="Gray" Click="BtnCancelar_Click" Cursor="Hand"/>

                    <Button Content="GUARDAR CAMBIOS" Width="140" Height="35"
                            Background="#FF0000" Foreground="White" BorderThickness="0" FontWeight="Bold" 
                            Click="BtnGuardar_Click" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="3"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>